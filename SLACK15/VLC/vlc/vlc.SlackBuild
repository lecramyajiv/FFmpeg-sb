  --enable-fribidi  \
  --enable-harfbuzz  \
  --enable-fontconfig \
  --with-default-font="/usr/share/fonts/TTF/NotoSans-Bold.ttf " \
  --with-default-monospace-font="/usr/share/fonts/TTF/NotoSansMono-Bold.ttf  " \
  --enable-libass  \
  --enable-svg     \
  --enable-svgdec \
