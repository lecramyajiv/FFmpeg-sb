  --disable-freerdp \
  --disable-macosx-avfoundation \
  --disable-wma-fixed  \
  --disable-omxil   \
  --disable-omxil-vout \
  --disable-rpi-omxil  \
  --disable-mmal \
  --disable-crystalhd \
  --disable-dxva2   \
  --disable-d3d11va  \
  --disable-oggspots  \
  --disable-daala   \
  --disable-bpg \
  --disable-fluidlite \
  --disable-wayland   \
  --disable-directx  \
  --disable-kva \
  --disable-evas  \
  --disable-oss  \
  --disable-sndio \
  --disable-wasapi  \
  --disable-jack    \
  --disable-opensles  \
  --disable-tizen-audio  \
  --disable-kai \
  --disable-macosx   \
  --disable-sparkle  \
  --with-breakpad=no \
  --disable-minimal-macosx \
  --disable-lirc   \
  --disable-vsxu   \
  --disable-update-check \
  --disable-osx-notifications \
  --disable-libplacebo

# From archlinux prevent excessive overlinking due to libtool
sed -i -e 's/ -shared / -Wl,-O2,--as-needed\0/g' libtool

make -j$nprocr
make install DESTDIR=$PKG

install -D -m0644 extras/analyser/vlc.vim $PKG/usr/share/vim/vimfiles/syntax/vlc.vim

rm -vf $PKG/usr/lib${LIBDIRSUFFIX}/*.la
rm -vf $PKG/usr/lib${LIBDIRSUFFIX}/vlc/*.la
find $PKG/usr/lib${LIBDIRSUFFIX}/vlc/plugins -type f -name "*.la" -delete

# From archlinux # remove unneeded/unused static library
rm -vf "$PKG/usr/lib/vlc/libcompat.a"

find $PKG -print0 | xargs -0 file | grep -e "executable" -e "shared object" \
  | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded --remove-section=.comment --remove-section=.note  2> /dev/null || true

find $PKG/usr/man -type f -exec gzip -9 {} \;
for i in $( find $PKG/usr/man -type l ) ; do ln -s $( readlink $i ).gz $i.gz ; rm $i ; done

cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild
cp -a AUTHORS COPYING NEWS README THANKS $PKG/usr/doc/$PRGNAM-$VERSION
find $PKG/usr/doc/$PRGNAM-$VERSION -type f -exec chmod 0644 {} \+
find $PKG/usr/lib${LIBDIRSUFFIX} -type f -exec chmod 0755 {} \+

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh
cat $CWD/doinst.sh > $PKG/install/douninst.sh

cd $PKG
/sbin/makepkg -l y -c n --remove-rpaths --remove-tmp-rpaths $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE





