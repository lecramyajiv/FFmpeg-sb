  --enable-kwallet  \
  --enable-notify  \
  --enable-vlc \
  --disable-static \
  --with-kde-solid=/usr/share/solid/actions \
  --with-macosx-sdk=no \
  --disable-winstore-app \
  --disable-pdb  \
  --disable-debug \
  --disable-gprof \
  --disable-cprof \
